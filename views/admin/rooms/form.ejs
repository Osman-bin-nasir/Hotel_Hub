<%- include('../../partials/header', { title: title }) %>
<%- include('../../partials/nav') %>

<div class="container mt-4">
    <h1 class="mb-4"><%= title %></h1>
    
    <% if (errors.length > 0) { %>
        <div class="alert alert-danger">
            <% errors.forEach(error => { %>
                <p><%= error.msg %></p>
            <% }) %>
        </div>
    <% } %>

    <form action="/admin/rooms/<%= room._id || '' %>" method="POST">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <% if (room._id) { %>
            <input type="hidden" name="_method" value="PUT">
        <% } %>

        <div class="form-group">
            <label>Room Name</label>
            <input type="text" name="name" class="form-control" 
                   value="<%= room.name || '' %>" required>
        </div>

        <div class="form-group">
            <label>Description</label>
            <textarea name="description" class="form-control" 
                      required><%= room.description || '' %></textarea>
        </div>

        <div class="form-group">
            <label>Price per Night</label>
            <input type="number" name="price" class="form-control" 
                   step="0.01" value="<%= room.price || '' %>" required>
        </div>

        <div class="form-group">
            <label>Capacity</label>
            <input type="number" name="capacity" class="form-control" 
                   value="<%= room.capacity || '' %>" required>
        </div>

        <div class="form-group">
            <label>Amenities</label>
            <div class="row">
                <div class="col-md-3">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="amenities" 
                               value="WiFi" <%= room.amenities && room.amenities.includes('WiFi') ? 'checked' : '' %>>
                        <label class="form-check-label">WiFi</label>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="amenities" 
                               value="TV" <%= room.amenities && room.amenities.includes('TV') ? 'checked' : '' %>>
                        <label class="form-check-label">TV</label>
                    </div>
                </div>
                <!-- Add more amenities as needed -->
            </div>
        </div>

        <button type="submit" class="btn btn-primary">
            <%= room._id ? 'Update' : 'Create' %> Room
        </button>
    </form>
</div>

<%- include('../../partials/footer') %>