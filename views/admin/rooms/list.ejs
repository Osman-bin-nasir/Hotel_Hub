<%- include('../../partials/header', { title: 'Manage Rooms' }) %>
<%- include('../../partials/nav') %>

<div class="container mt-4">
    <% if (messages.success) { %>
        <div class="alert alert-success"><%= messages.success %></div>
    <% } %>
    
    <h1 class="mb-4">Manage Rooms</h1>
    <a href="/admin/rooms/new" class="btn btn-primary mb-3">Create New Room</a>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Price</th>
                <th>Capacity</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% rooms.forEach(room => { %>
                <tr>
                    <td><%= room.name %></td>
                    <td>$<%= room.price %></td>
                    <td><%= room.capacity %></td>
                    <td>
                        <a href="/rooms/<%= room._id %>" class="btn btn-sm btn-info">View Details</a>
                        <a href="/admin/rooms/<%= room._id %>/edit" class="btn btn-sm btn-warning">Edit</a>
                        <form action="/admin/rooms/<%= room._id %>/delete" method="POST" class="d-inline">
                            <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                        </form>
                    </td>                    
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>

<%- include('../../partials/footer') %>